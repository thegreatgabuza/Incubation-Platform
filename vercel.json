{
  "buildCommand": "npm run build",
  "framework": "vite",
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "NODE_OPTIONS": "--max_old_space_size=4096"
  }
} 